<body>
    <div class="d-flex top">
        <div id="left"></div>
        <div id="center" class="justify-content-center">
            <br/>
            <div id="logo">
                <a href="#"><img src="/resources/img/logo.png" alt="Edu OYK"></a>
            </div>
            <div id="avatar">
                <img id="inner-avatar" src="/resources/img/shop/ltn.jpg" alt="Avatar" class="rounded-circle">
                {{!-- {{#if authUser.avatar}}
                    <img id="inner-avatar" src="{{authUser.avatar}}" alt="Avatar" class="rounded-circle">
                {{else}}
                    <img id="inner-avatar" src="/public/images/logo2.jpg" alt="Avatar" class="rounded-circle">
                {{/if}} --}}
            </div>
            <div><span id="accountName">Shopee Trading</span></div>
            <div><span id="role">Shop</span></div>
            <div><a href="/lecturer/addcourse" class="myButton"><i class="fas fa-plus-circle"></i>       Tạo khóa học</a></div>
            <hr/>
            <div id="linkage">
                <dl>
                    <dt>
                        <div><a class="link" href="/lecturer/information"><i class="fas fa-user-circle    "></i>     Thông tin cá nhân</a></div>
                    </dt>
                    <dt>
                        <div id="ex"><a class="link" href="javascript:;"><i class="fas fa-play-circle    "></i>     Khóa học</a></div>
                    </dt>
                    <dd>
                        <div id="ex1"><a class="link" href="/lecturer/mycourses"><i class="fas fa-tasks    "></i>     Quản trị khóa học</a></div>
                    </dd>
                    <dd>
                        <div id="ex2"><a class="link" href="javascript:;"><i class="fas fa-film    "></i>     Kho học liệu</a></div>
                    </dd>
                    <script>
                        $("#ex").on('click',function(){
                            $("#ex1").toggle('slow');
                            $("#ex2").toggle('slow');
                        })
                        $("#ex2").on('click',function(event){
                            alert('Tính năng này hiện đang tạm khóa');
                            event.preventDefault();
                        })
                    </script>
                    <dt>
                        <form id="frmLogOut" method="POST" action="/account/logout"></form>
                        <div><a class="text-danger link " href="/account/logout"><i class="fas fa-power-off    "></i>     Đăng xuất</a></div>
                    </dt>
                </dl>
            </div>
        </div>
