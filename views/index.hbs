									<a  href="javascript: love('#frmLove{{maso}}');" class="add-card"><i class="flaticon-heart"></i><span>Yêu thích</span></a>
								</form>
								
							</div>
						</div>
						<a href="/products/{{maso}}">
							<div class="pi-text">
								<h6>{{giaban}}</h6>
								<p>{{ten}} </p>
							</div>
						</a>
					</div>
				{{/each}}
				
			</div>
		</div>
	</section>
