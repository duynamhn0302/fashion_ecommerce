	<!-- letest product section -->
	<section class="top-letest-product-section">
		<div class="container">
			<div class="section-title">
				<h2>Mới nhất</h2>
			</div>
			<div class="product-slider owl-carousel">
				{{#each top10New}}
					<div class="product-item">
						<div class="pi-pic">
							<a href="/products/{{maso}}">
								<img src="{{avatar}}" alt="" style="height: 350px;">
							</a>
							<div class="pi-links">
								<a href="#" class="add-card"><i class="flaticon-shopping-cart"></i><span>Mua ngay</span></a>
